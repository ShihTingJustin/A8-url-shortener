{{#if shortURL}}
  <div class="result">
    <h3>Success! Please use this link:</h3>
    <p data-testid="short-url" id="generatedURL">{{origin}}/{{shortURL}}</p>
  </div>
  <button class="copy" onclick="copy()">Copy</button>

  <script>
    function copy() {
      const URL = document.getElementById("generatedURL")
      navigator.clipboard.writeText(URL.innerText)
        .then(() => alert('copied'))
        .catch(error => console.log(error))
    }
  </script>
{{else}}
  <form action="/" method="POST">
    <div class="container">
      <input data-testid="url-input" type="url" name="url" placeholder="Input URL here" required />
      <button data-testid="submit-btn" class="shorten" type="submit">Shorten</button>
    </div>
  </form>
{{/if}}